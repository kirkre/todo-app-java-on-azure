node {
  stage('init') {
    // git clone
    checkout scm
  }

  stage('build') {
    sh 'mvn clean package'
    acrQuickBuild azureCredentialsId: env.AZURE_CRED_ID,
                  resourceGroupName: env.RES_GROUP,
                  registryName: env.ACR_NAME,
                  platform: "Linux",
                  dockerfile: "Dockerfile",
                  imageNames: [[image: "$env.ACR_REGISTRY/$env.IMAGE_NAME:$env.BUILD_NUMBER"]]
  }

  stage('deploy') {
    acsDeploy azureCredentialsId: env.AZURE_CRED_ID, 
              configFilePaths: 'doc/resources/k8s/k8s.yml', 
              containerRegistryCredentials: [[credentialsId: env.ACR_USERNAME, url: "http://$env.ACR_REGISTRY"]],
              containerService: "$env.AKS_NAME | AKS",
              enableConfigSubstitution: true, 
              resourceGroupName: env.RES_GROUP,
              secretName: env.ACR_SECRET
  }
}
